<% @article.comments.each do |comment| %>
  <blockquote>
    <%= image_tag(comment.user.gravatar_url, class: 'avatar') %>
    <div>
      <h5><%= comment.user.name %></h5>
      <%= comment.body %>
    </div>

    <p class="comment-controls link_color">
      <% if policy(comment).is_commenter? %>
        <%= link_to "Edit", edit_article_comment_path(@article, comment) %>&nbsp;
      <% end %>
      <% if policy(comment).is_editor? %>
        <%= link_to "Delete", [@article, comment], method: :delete, data: { confirm: 'Are you sure you want to delete this comment?' } %>
      <% end %>
    </p>

  </blockquote>
<% end %>
