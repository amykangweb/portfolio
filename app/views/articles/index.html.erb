<h1>Listing Articles</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @articles.each do |article| %>
      <tr id="<%= dom_id(article) %>">
        <td><%= link_to article.title, article %></td>
        <td><%= article.body %></td>
        <td><%= link_to 'Show', article %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if user_can_view?(current_user) %>
  <%= link_to 'New Article', new_article_path %>
<% end %>
