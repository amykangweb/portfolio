<div class="articles-header">
<div class="large_spacer"></div>
<h1><strong><%= link_to "TIPS & TUTORIALS", articles_path, style: "color: #fff;" %></strong></h1>
<em>Programming tips, tutorials, and notes.</em>
</div>

<div class="inner-container">

  <% if user_signed_in? && current_user.editor? %>
    <%= link_to 'New Article', new_article_path %>
  <% end %>

    <% @articles.each do |article| %>
        <div class="row">
        <div class="col-lg-12">
          <h3><strong><%= link_to article.title, article %></strong></h3>

          <%= truncate(sanitize(article.body), length: 200) %>

        </div>
        </div>
    <% end %>

    <div class="text-center">
    <%= will_paginate @articles %>
    </div>

</div>
<div class="spacer"></div>
