<div class="grey-bg">
<div class="spacer"></div>
<div class="small_spacer"></div>

<div class="text-center">
<h1 style="font-weight: bold;"><%= @post.title %></h1>
<em>Life Lessons, Day to Day, Random Musings</em>
</div>

<div class="small_spacer"></div>
<div class="container">
<div class="white-bg inner-container">

<p>
  <i class="fa fa-coffee"></i>&nbsp;&nbsp;
  <em>Posted <%= time_ago_in_words(@post.created_at) %> ago.</em>
</p>

<p>
  <%= simple_format(@post.content) %>
</p>

<div class="small_spacer"></div>
<% unless @post.next.blank? && @post.previous.blank? %>
<p class="text-center">
<% unless @post.previous.nil? %>
  <%= link_to @post.previous do %>
    &#8592; Previous
  <% end %>
<% end %>
  &nbsp;&nbsp;
<% unless @post.next.nil? %>
  <%= link_to @post.next do %>
    Next &rarr;
  <% end %>
<% end %>
</p>
<% end %>

<div class="tiny_spacer"></div>
<div class="text-center">
<p><%= link_to 'Back', posts_path %></p>
</div>

<% if user_signed_in? && current_user.editor? %>
<div class="tiny_spacer"></div>
<div class="text-center">
<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to "Delete", @post, method: :delete, data: { confirm: "Are you sure you want to delete this post?" } %>
</div>
<% end %>

</div>

</div>
<div class="large_spacer"></div>
</div>
