<i class="fa fa-times fa-2x close-out"></i>

<div class="project-info">

<div class="inner-info">
<h1><%= @project.name %></h1>
<h4 id="author"><%= @project.technologies_used %></h4>

<div class="row">
  <div class="large-12 columns article-body text-center">
    <%= raw sanitize(simple_format(@project.description)) %>
  </div>
</div>
</div>

<div class="row">
  <div class="large-12 columns text-center visit-links">
    <p>
      <% unless @project.site.blank? %>
        <%= link_to "Visit Site", @project.site, class: "project-link" %>&nbsp;&nbsp;
      <% end %>
      <% unless @project.source.blank? %>
        <%= link_to "Source", @project.source, class: "project-link" %>
      <% end %>
    </p>
  </div>
</div>

<p><%= image_tag @project.image.url, id: 'image_one' %></p>
<p><%= image_tag @project.extra.url, id: 'image_two' %></p>

  <%= render 'control' %>

  <%= render 'prev_next' %>
</div>
